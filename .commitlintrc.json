{
	"extends": ["@commitlint/config-conventional"],
	"rules": {
		"header-max-length": [2, "always", 72],
		"type-enum": [
			2,
			"always",
			[
				"feat",
				"fix",
				"docs",
				"style",
				"refactor",
				"perf",
				"test",
				"chore",
				"build",
				"ci",
				"revert"
			]
		],
		"ticket-id": [2, "always"]
	},
	"plugins": [
		{
			"rules": {
				"ticket-id": {
					"description": "commit message must contain a ticket ID in the format [PYTA-1]",
					"function": "function ({ header }) { return /\\[(PYTA-\\d+|NO-ISSUE)\\]/.test(header); }"
				}
			}
		}
	]
}
